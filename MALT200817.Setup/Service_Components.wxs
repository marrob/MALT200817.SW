<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <!--  http://stackoverflow.com/questions/1942039/how-to-install-and-start-a-windows-service-using-wix -->
  <?include $(sys.CURRENTDIR)Config.wxi ?>
  
  <Fragment>
    <Component Id ="Service_Components" Directory="AppFolder" Guid ="{A052FF43-DBD1-454D-B59E-2763BD11AF5B}">
      <File Id='MALT200817.ServiceEXE' Name='MALT200817.Service.exe'  DiskId='1'  Source='$(var.AppDirectory)\MALT200817.Service.exe' KeyPath='yes'/>
    
      <ServiceInstall
        Id="ServiceInstaller"
        Type="ownProcess"
        Name="myService"
        DisplayName="AltonTech MALT200817.Service"
        Description="MALT Platform Windows Service"
        Start="auto"
        
        Account="LocalSystem"
        ErrorControl="normal" 
        Arguments=" /start myService"
        Interactive="no" 
        
        />
      <ServiceControl Id="StartService"
                      Start="install"
                      Stop="both"
                      Remove="uninstall"
                      Name="myService"
                      Wait="yes" />
    </Component>
  </Fragment>
</Wix>

