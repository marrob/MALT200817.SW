<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!-- This is how we include wxi files -->
    <?include $(sys.CURRENTDIR)Config.wxi ?>
    <ComponentGroup Id="Application_Components" Directory="AppFolder" >
      
      <Component Guid="{DD628932-1855-4DE3-8E0D-63D47830619F}" >
        <RemoveFolder Id="AppProgramsFolder" On='uninstall'  Directory='AppProgramsFolder'/>
        <RegistryValue Root='HKCU' Key='Software\[Manufacturer]\[ProductName]' Type='string' Value='' KeyPath='yes' />
      </Component>
      
      <Component Id="App_Files" Guid="{F1E00504-6CC7-4E1B-AF54-96D2EAF2FD13}">
        
        
        <File Name="MALT200817.Explorer.exe" Source="$(var.AppDirectory)\MALT200817.Explorer.exe" KeyPath="yes" Checksum="yes">
          <Shortcut Id="_MALT200817.Explorer.exe" Directory="AppProgramsFolder" WorkingDirectory="AppFolder" Icon="AppAddRemove.ico" Name="$(var.ProductName)" Advertise="yes" />
          <Shortcut Id="DesktopShortcut"    Directory="DesktopFolder"  WorkingDirectory = "AppFolder"  Icon="AppAddRemove.ico"  Name="$(var.ProductName)" Advertise="yes" />
        </File>
       <File Id="_MALT200817.Configuration.dll" Source="$(var.AppDirectory)\MALT200817.Configuration.dll" KeyPath="no" Checksum="yes"/>
        <File Id="_MALT200817.Library.dll" Source="$(var.AppDirectory)\MALT200817.Library.dll" KeyPath="no" Checksum="yes"/>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>